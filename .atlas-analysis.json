  "keyFeatures": [
    "Content-addressable storage with APFS clonefile support for zero-overhead copying",
    "Parallel installation with configurable concurrency (5-20x faster than Homebrew)",
    "Brewfile support for reproducible package environments",
    "Source build fallback when pre-built bottles are unavailable",
    "Seamless migration from existing Homebrew installations",
    "Garbage collection for efficient storage management",
    "Shell completion support for bash, zsh, and fish"
  ],
  "publicApiSurface": [
    "zb install <formulas...> [--no-link] [--build-from-source]",
    "zb uninstall <formulas...> [--all]",
    "zb bundle [install|dump] [-f FILE] [--force]",
    "zb migrate [--yes] [--force]",
    "zb list",
    "zb info <formula>",
    "zb update",
    "zb outdated [--quiet|--verbose|--json]",
    "zb gc",
    "zb reset [--yes]",
    "zb init [--no-modify-path]",
    "zb completion <shell>",
    "zbx <formula> <args...>"
